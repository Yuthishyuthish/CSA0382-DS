#include <stdio.h>

int main() {
    int n, num;

    printf("Enter the number of integers: ");
    scanf("%d", &n);

    for (int i = 0; i < n; ++i) {
        printf("Enter number %d: ", i + 1);
        scanf("%d", &num);

        if (num % 2 == 0) {
            printf("%d is even\n", num);
        } else {
            printf("%d is odd\n", num);
        }
    }

    return 0;
}
